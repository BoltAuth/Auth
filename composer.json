{
    "name": "bolt/members",
    "description": "Membership creation and management for Bolt",
    "type": "bolt-extension",
    "keywords": [
        "Facebook",
        "GitHub",
        "Google",
        "login",
        "membership",
        "oauth",
        "profiles"
    ],
    "require": {
        "php": ">=5.5.9",
        "bolt/bolt": "^3.0",
        "bolt/boltforms": "^3.0",
        "ramsey/uuid": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Gawain Lynch",
            "email": "gawain.lynch@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "name": "bolt",
            "type": "composer",
            "url": "https://extensions.bolt.cm/satis/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bolt\\Extension\\Bolt\\Members\\": "src",
            "League\\Event\\": "lib/League/Event",
            "League\\OAuth2\\Client\\": "lib/League/OAuth2/Client/",
            "Stevenmaguire\\OAuth2\\Client\\": "lib/League/OAuth2/Client/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bolt\\Extension\\Bolt\\Members\\Tests\\": "tests",
            "Bolt\\Tests\\": "vendor/bolt/bolt/tests/phpunit/unit/"
        }
    },
    "extra": {
        "bolt-assets": "web",
        "bolt-class": "Bolt\\Extension\\Bolt\\Members\\MembersExtension",
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
