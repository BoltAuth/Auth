{% extends twigparent %}

{% block members %}
    <div class="row">
        <h4>New Member</h4>
    </div>

    <div class="row register">

        <div class="small-12 columns">

            {{ form_start(form) }}
                {{ form_row(form.displayname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
                <br>
                {{ form_row(form.submit) }}
            {{ form_end(form) }}

        </div>

    </div>

    {% include 'feedback.twig' %}
{% endblock %}
