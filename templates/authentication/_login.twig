{% extends twigparent %}

{% block login %}
<div class="login">
    <div class="row profile">
        <div class="small-12 columns">
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                <br>
                {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row profile">
        <div class="small-12 columns">
            {{ members_auth_login() }}
        </div>
    </div>
</div>
{% endblock login %}
