{% extends twigparent %}

{% block login %}
    {% include "feedback.twig" %}

    <div class="login">
        <div class="row member-login">
            {{ form_start(auth_form) }}

            {% if providers.local is defined %}
                {{ _self.password_login(auth_form) }}
            {% endif %}

            {{ form_end(auth_form) }}

            <div class="small-6 columns members-login-providers">

            </div>
        </div>
    </div>
{% endblock login %}

{% macro password_login(auth_form) %}
    <div class="small-6 columns members-login-password">
        {{ form_row(auth_form.email) }}
        {{ form_row(auth_form.password) }}
        <br>
        {{ form_row(auth_form.submit) }}
    </div>
{% endmacro %}


{% macro oauth_login(oauth_form, providers) %}
    <div class="small-6 columns members-login-password">
        {{ form_start(oauth_form) }}

        {% for provider in providers|keys %}
            {% if provider != 'local' %}
                {{ form_row(oauth_form[provider]) }}
            {% endif %}
        {% endfor %}

        {{ form_end(oauth_form) }}
    </div>
{% endmacro %}
