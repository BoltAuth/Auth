## Add-ons
#
addons:
    zocial: false # Set to true to enable using Zocial icons. Requires the bolt/zocial-icons extension to be installed.

## Registration
#
registration:
    enabled: true                        # If registration should be allowed [true|false]
    verify_name: Site Admin              # Display name used as the sender name
    verify_email: no-reply@example.com   # Email address as the sender address

# Base URLs
urls:
    authenticate: authentication
    members: membership

## Access Control
#
roles:
    admin:
        - root
        - admin
        - developer
    member:
        admin: Administrator
        participant: Participant
    associate:
        - participant

## OAuhth2 Providers
#
providers:
    local:
        label:
            sign_in: Sign in with a local account
            associate: --not applicable--
        enabled: false
        keys:
            client_id: localdefault
            client_secret: localdefault
        scopes: [ user ]
    google:
        label:
            sign_in: Sign in with Google
            associate: Add your Google account
        enabled: false
        keys:
            client_id:
            client_secret:
        scopes: [ openid, profile, email ]
    facebook:
        label:
            sign_in: Sign in with Facebook
            associate: Add your Facebook account
        enabled: false
        keys:
            client_id:
            client_secret:
        scopes: [ email ]
    github:
        label:
            sign_in: Sign in with GitHub
            associate: Add your GitHub account
        enabled: false
        keys:
            client_id:
            client_secret:
        scopes: [ user ]
